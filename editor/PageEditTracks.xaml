<local:EditorPage x:Class="editor.PageEditTracks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:editor" xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" Background="#FFFFFF"
      d:DesignHeight="400" d:DesignWidth="600">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="0,0,0,5" FontSize="20">音轨列表</TextBlock>
            <Grid Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center">BPM=</TextBlock>
                <xc:DecimalUpDown FormatString="F0" Increment="1" Minimum="1" Maximum="1000" Name="InputBPM" Grid.Column="1" Margin="3,0,0,0" Value="140" Width="56" ValueChanged="InputBPM_ValueChanged"></xc:DecimalUpDown>
            </Grid>

            <ScrollViewer x:Name="ScrollLeft" Grid.Row="1" Grid.Column="0" Background="#EFEFEF" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" ScrollChanged="ScrollLeft_ScrollChanged">
                <StackPanel x:Name="ScrollLeftContent"></StackPanel>
            </ScrollViewer>
            <GridSplitter Grid.Row="1" HorizontalAlignment="Right" Width="5" Background="#E0E0E0" Cursor="SizeWE" />
            <ScrollViewer x:Name="ScrollRight" Grid.Row="1" Grid.Column="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible" ScrollChanged="ScrollRight_ScrollChanged" PreviewMouseWheel="ScrollRight_PreviewMouseWheel">
                <StackPanel x:Name="ScrollRightContent" MouseDown="ScrollRightContent_MouseDown" Background="#808080"></StackPanel>
            </ScrollViewer>

            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <TextBlock Margin="10">
                    <Bold>[左键]</Bold> 选择音符 | <Bold>[右键]</Bold> 清空音符 <LineBreak/>
                    选择音符后，点击左侧资源列表即可替换音符
                </TextBlock>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" Margin="0,5,0,0" FontSize="20">音量调整</TextBlock>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                <TextBlock VerticalAlignment="Center">将</TextBlock>
                <TextBlock Name="TextMediaName" VerticalAlignment="Center" Margin="5,0,5,0" Background="#EFEFEF" Padding="5,0,5,0">(未选中资源)</TextBlock>
                <TextBlock VerticalAlignment="Center">的音量调整为</TextBlock>
                <xc:DecimalUpDown VerticalAlignment="Center" FormatString="F2" Increment="0.1" Minimum="0" Maximum="10" Name="InputVolume" Margin="5,0,5,0" Value="1" Width="64" IsEnabled="False"></xc:DecimalUpDown>
                <TextBlock VerticalAlignment="Center">倍</TextBlock>
                <Button Name="ButtonSaveVolume" Margin="10,0,0,0" Width="50" IsEnabled="False" Click="ButtonSaveVolume_Click">确定</Button>
            </StackPanel>
        </Grid>
    </Grid>
</local:EditorPage>
