<Window x:Class="editor.DialogTrackRename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:editor"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="CanMinimize"
        Title="为音轨重命名" Height="120" Width="250" MinHeight="120" MinWidth="250">
    <Grid>

        <Grid Margin="20,20,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center" Grid.Column="0">新名字:</TextBlock>
                <TextBox Name="TrackNameText" VerticalAlignment="Center" Grid.Column="1" Margin="5,0,0,0"></TextBox>
            </Grid>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Width="75" Margin="0,0,10,0" Click="OK_Click">确定</Button>
                <Button Width="75" Click="Cancel_Click">取消</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
