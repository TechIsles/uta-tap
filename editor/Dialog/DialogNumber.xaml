<Window x:Class="editor.DialogNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:editor" xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="CanMinimize"
        Title="确定资源名称" Height="200" Width="250" MinHeight="200" MinWidth="250">
    <Grid>
        <Grid Margin="20,15,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel>
                <Grid Height="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock VerticalAlignment="Center" Grid.Column="0">文件名: </TextBlock>
                    <TextBlock Name="FileNameText" VerticalAlignment="Center" Grid.Column="1" Margin="3,0,0,0">awa</TextBlock>
                </Grid>
                <Grid Margin="0,3,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" VerticalAlignment="Center">资源名: </TextBlock>
                    <xc:DecimalUpDown FormatString="F0" Increment="1" Minimum="1" Maximum="114514" Name="InputNumber" Grid.Column="1" Margin="3,0,0,0" Value="1"></xc:DecimalUpDown>
                    <TextBlock Grid.Column="2" VerticalAlignment="Center">.mp3</TextBlock>
                </Grid>
                <Grid Margin="0,5,0,0">
                    <TextBlock TextWrapping="Wrap" Foreground="#808080" FontSize="10">出于 mikutap 限制，资源名必须为整数，且必须以“.mp3”结尾</TextBlock>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Width="75" Margin="0,0,10,0" Click="OK_Click">确定</Button>
                <Button Width="75" Click="Cancel_Click">取消</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
