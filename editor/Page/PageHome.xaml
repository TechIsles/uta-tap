<local:EditorPage x:Class="editor.PageHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:editor" xmlns:xc="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" Background="#FFFFFF"
      d:DesignHeight="400" d:DesignWidth="600">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="36" Foreground="#808080" Margin="0,0,0,5">未打开文件</TextBlock>
            <TextBlock Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Foreground="#232323" TextAlignment="Center">
                在左上角“文件”处打开歌姬/音轨配置<LineBreak/>
                或直接拖入文件
            </TextBlock>
        </Grid>
    </Grid>
</local:EditorPage>
